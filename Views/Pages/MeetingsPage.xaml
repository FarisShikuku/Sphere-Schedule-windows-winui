<Page
    x:Class="Sphere_Schedule_App.Views.Pages.MeetingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:Microsoft.UI.Xaml.Controls"
    xmlns:converters="using:Sphere_Schedule_App.Converters" 
    xmlns:local="using:Sphere_Schedule_App.Views.Pages"
    mc:Ignorable="d"
    Background="Transparent">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="ms-appx:///Views/Templates/ResourceDictionaries/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <!-- Converters -->
            <converters:StringFormatConverter x:Key="StringFormatConverter"/>
            <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

            <!-- Colors for status -->
            <SolidColorBrush x:Key="StatusScheduledBrush" Color="#0078D4"/>
            <SolidColorBrush x:Key="StatusInProgressBrush" Color="#107C10"/>
            <SolidColorBrush x:Key="StatusCompletedBrush" Color="#505050"/>
            <SolidColorBrush x:Key="StatusCancelledBrush" Color="#D13438"/>
            <SolidColorBrush x:Key="StatusCriticalBrush" Color="#E3008C"/>
            <x:String x:Key="PlatformBrushFormat">{0}Brush</x:String>
            <x:String x:Key="ParticipantsFormat">{0} participants</x:String>
            <x:String x:Key="MeetingsFormat">{0} meetings</x:String>
            <x:String x:Key="ViewModeFormat">{0:Compact:Detailed}</x:String>
            


            <!-- Colors for priority -->
            <SolidColorBrush x:Key="PriorityLowBrush" Color="#107C10"/>
            <SolidColorBrush x:Key="PriorityNormalBrush" Color="#0078D4"/>
            <SolidColorBrush x:Key="PriorityHighBrush" Color="#FF8C00"/>
            <SolidColorBrush x:Key="PriorityCriticalBrush" Color="#D13438"/>

            <!-- Platform colors -->
            <SolidColorBrush x:Key="GoogleMeetBrush" Color="#34A853"/>
            <SolidColorBrush x:Key="TeamsBrush" Color="#6264A7"/>
            <SolidColorBrush x:Key="ZoomBrush" Color="#2D8CFF"/>
            <SolidColorBrush x:Key="WebexBrush" Color="#FA4700"/>
            <SolidColorBrush x:Key="SkypeBrush" Color="#00AFF0"/>
            <SolidColorBrush x:Key="CustomBrush" Color="#6B5B95"/>

            <!-- Meeting item template -->
            <DataTemplate x:Key="MeetingItemTemplate">
                <Border
                    Background="{ThemeResource CardBackgroundFillColorDefault}"
                    CornerRadius="12"
                    Padding="16"
                    BorderThickness="1"
                    BorderBrush="{ThemeResource CardStrokeColorDefault}"
                    Margin="0,0,0,12">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Time indicator -->
                        <StackPanel Grid.Column="0" Width="100" Margin="0,0,16,0">
                            <TextBlock
                                Text="{Binding TimeRange}"
                                Style="{StaticResource BodyStrongTextBlockStyle}"
                                Foreground="{ThemeResource TextFillColorPrimary}"/>
                            <TextBlock
                                Text="{Binding Duration}"
                                Style="{StaticResource CaptionTextBlockStyle}"
                                Foreground="{ThemeResource TextFillColorSecondary}"
                                Margin="0,4,0,0"/>
                        </StackPanel>

                        <!-- Meeting details -->
                        <StackPanel Grid.Column="1">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock
                                        Text="{Binding Title}"
                                        Style="{StaticResource SubtitleTextBlockStyle}"
                                        Foreground="{ThemeResource TextFillColorPrimary}"
                                        TextWrapping="WrapWholeWords"/>
                                    <TextBlock
                                        Text="{Binding Description}"
                                        Style="{StaticResource BodyTextBlockStyle}"
                                        Foreground="{ThemeResource TextFillColorSecondary}"
                                        TextWrapping="WrapWholeWords"
                                        MaxLines="2"
                                        Margin="0,4,0,0"/>

                                    <!-- Tags -->
                                    <StackPanel Orientation="Horizontal" Spacing="8" Margin="0,12,0,0">
                                        <!-- Status badge -->
                                        <Border
                                            Background="{Binding Status, Converter={StaticResource StringFormatConverter}, ConverterParameter='Status{0}Brush'}"
                                            CornerRadius="6"
                                            Padding="6,2">
                                            <TextBlock
                                                Text="{Binding Status}"
                                                Style="{StaticResource CaptionTextBlockStyle}"
                                                Foreground="White"/>
                                        </Border>

                                        <!-- Priority badge -->
                                        <Border
                                            Background="{Binding Priority, Converter={StaticResource StringFormatConverter}, ConverterParameter='Priority{0}Brush'}"
                                            CornerRadius="6"
                                            Padding="6,2">
                                            <TextBlock
                                                Text="{Binding Priority}"
                                                Style="{StaticResource CaptionTextBlockStyle}"
                                                Foreground="White"/>
                                        </Border>

                                        <!-- Platform badge -->
                                        <Border
                                            Background="{Binding Platform, Converter={StaticResource StringFormatConverter}, ConverterParameter={StaticResource PlatformBrushFormat}}"


                                            CornerRadius="6"
                                            Padding="6,2">
                                            <TextBlock
                                                Text="{Binding Platform}"
                                                Style="{StaticResource CaptionTextBlockStyle}"
                                                Foreground="White"/>
                                        </Border>

                                        <!-- Recurring indicator -->
                                        <Border
                                            Background="{ThemeResource SystemFillColorAttentionBrush}"
                                            CornerRadius="6"
                                            Padding="6,2"
                                            Visibility="{Binding IsRecurring, Converter={StaticResource BooleanToVisibilityConverter}}">
                                            <TextBlock
                                                Text="ðŸ” Recurring"
                                                Style="{StaticResource CaptionTextBlockStyle}"
                                                Foreground="White"/>
                                        </Border>
                                    </StackPanel>

                                    <!-- Participants and attachments -->
                                    <StackPanel Orientation="Horizontal" Spacing="12" Margin="0,8,0,0">
                                        <StackPanel Orientation="Horizontal" Spacing="4">
                                            <FontIcon Glyph="&#xE716;" FontSize="12" Foreground="{ThemeResource TextFillColorSecondary}"/>
                                            <TextBlock
                                                Text="{Binding Participants, Converter={StaticResource StringFormatConverter}, ConverterParameter={StaticResource ParticipantsFormat}}"

                                                Style="{StaticResource CaptionTextBlockStyle}"
                                                Foreground="{ThemeResource TextFillColorSecondary}"/>
                                        </StackPanel>

                                        <StackPanel Orientation="Horizontal" Spacing="4" 
                                                   Visibility="{Binding HasAttachments, Converter={StaticResource BooleanToVisibilityConverter}}">
                                            <FontIcon Glyph="&#xE8B9;" FontSize="12" Foreground="{ThemeResource TextFillColorSecondary}"/>
                                            <TextBlock
                                                Text="Has attachments"
                                                Style="{StaticResource CaptionTextBlockStyle}"
                                                Foreground="{ThemeResource TextFillColorSecondary}"/>
                                        </StackPanel>
                                    </StackPanel>
                                </StackPanel>

                                <!-- Action buttons -->
                                <StackPanel Grid.Column="1" Spacing="8" HorizontalAlignment="Right">
                                    <Button
                                        Content="Join"
                                        Style="{StaticResource AccentButtonStyle}"
                                        Command="{Binding DataContext.JoinMeetingCommand, ElementName=MainGrid}"
                                        CommandParameter="{Binding}"
                                        Width="80"/>
                                    <Button
                                        Content="Edit"
                                        Style="{StaticResource DefaultButtonStyle}"
                                        Command="{Binding DataContext.EditMeetingCommand, ElementName=MainGrid}"
                                        CommandParameter="{Binding}"
                                        Width="80"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>

                        <!-- Delete button -->
                        <Button
                            Grid.Column="2"
                            Style="{StaticResource IconButtonStyle}"
                            Command="{Binding DataContext.DeleteMeetingCommand, ElementName=MainGrid}"
                            CommandParameter="{Binding}"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Top">
                            <FontIcon Glyph="&#xE74D;" FontSize="14"/>
                        </Button>
                    </Grid>
                </Border>
            </DataTemplate>

            <!-- Compact meeting item template -->
            <DataTemplate x:Key="CompactMeetingItemTemplate">
                <Border
                    Background="{ThemeResource CardBackgroundFillColorDefault}"
                    CornerRadius="8"
                    Padding="12"
                    BorderThickness="1"
                    BorderBrush="{ThemeResource CardStrokeColorDefault}"
                    Margin="0,0,0,8">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock
                                Text="{Binding Title}"
                                Style="{StaticResource BodyStrongTextBlockStyle}"
                                Foreground="{ThemeResource TextFillColorPrimary}"/>
                            <StackPanel Orientation="Horizontal" Spacing="8" Margin="0,4,0,0">
                                <TextBlock
                                    Text="{Binding TimeRange}"
                                    Style="{StaticResource CaptionTextBlockStyle}"
                                    Foreground="{ThemeResource TextFillColorSecondary}"/>
                                <TextBlock
                                    Text="â€¢"
                                    Style="{StaticResource CaptionTextBlockStyle}"
                                    Foreground="{ThemeResource TextFillColorSecondary}"/>
                                <TextBlock
                                    Text="{Binding Platform}"
                                    Style="{StaticResource CaptionTextBlockStyle}"
                                    Foreground="{ThemeResource TextFillColorSecondary}"/>
                            </StackPanel>
                        </StackPanel>

                        <Border
                            Grid.Column="1"
                            Background="{Binding Status, Converter={StaticResource StringFormatConverter}, ConverterParameter='Status{0}Brush'}"
                            CornerRadius="4"
                            Padding="6,2"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center">
                            <TextBlock
                                Text="{Binding Status}"
                                Style="{StaticResource CaptionTextBlockStyle}"
                                Foreground="White"/>
                        </Border>
                    </Grid>
                </Border>
            </DataTemplate>

            <!-- Platform connection button template -->
            <DataTemplate x:Key="PlatformButtonTemplate">
                <Button
                    Width="140"
                    Height="140"
                    Background="{Binding Color}"
                    CornerRadius="12"
                    Command="{Binding DataContext.ConnectToPlatformCommand, ElementName=MainGrid}"
                    CommandParameter="{Binding Name}">
                    <StackPanel Spacing="12" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <FontIcon 
                            Glyph="{Binding Icon}" 
                            FontSize="36" 
                            Foreground="White"/>
                        <TextBlock
                            Text="{Binding Name}"
                            Style="{StaticResource BodyStrongTextBlockStyle}"
                            Foreground="White"
                            TextAlignment="Center"/>
                    </StackPanel>
                </Button>
            </DataTemplate>

        </ResourceDictionary>
    </Page.Resources>

    <Grid x:Name="MainGrid" Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <StackPanel Grid.Row="0" Spacing="16">
            <StackPanel Orientation="Horizontal" Spacing="12" VerticalAlignment="Center">
                <FontIcon 
                    Glyph="&#xE716;" 
                    FontSize="28" 
                    Foreground="{ThemeResource TextFillColorPrimary}"/>
                <TextBlock
                    Text="Meetings"
                    Style="{StaticResource DisplayTextBlockStyle}"
                    Foreground="{ThemeResource TextFillColorPrimary}"/>
                <Border
                    Background="{ThemeResource SystemFillColorAttentionBrush}"
                    CornerRadius="10"
                    Padding="8,4"
                    VerticalAlignment="Center">
                    <TextBlock
                        Text="{Binding TodayMeetings.Count, Converter={StaticResource StringFormatConverter}, ConverterParameter={StaticResource MeetingsFormat}}"
                        Style="{StaticResource CaptionTextBlockStyle}"
                        Foreground="White"/>
                </Border>
            </StackPanel>

            <!-- Search and filters -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Search box -->
                <AutoSuggestBox
                    Grid.Column="0"
                    PlaceholderText="Search meetings..."
                    QueryIcon="Find"
                    Text="{Binding SearchText, Mode=TwoWay}"
                    Margin="0,0,12,0"/>

                <!-- Date picker -->
                <DatePicker
                    Grid.Column="1"
                    SelectedDate="{Binding SelectedDate, Mode=TwoWay}"
                    Margin="0,0,12,0"
                    Width="180"/>

                <!-- Filter combo -->
                <ComboBox
                    Grid.Column="2"
                    ItemsSource="{Binding FilterOptions}"
                    SelectedItem="{Binding SelectedFilter, Mode=TwoWay}"
                    Width="140"/>
            </Grid>

            <!-- Quick actions -->
            <StackPanel Orientation="Horizontal" Spacing="12">
                <Button
                    Style="{StaticResource AccentButtonStyle}"
                    Command="{Binding CreateMeetingCommand}">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE710;"/>
                        <TextBlock Text="Create Meeting"/>
                    </StackPanel>
                </Button>

                <Button
                    Style="{StaticResource DefaultButtonStyle}"
                    Command="{Binding ToggleViewModeCommand}">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="{Binding IsCompactView, Converter={StaticResource StringFormatConverter}, ConverterParameter='&#xE73F;:&#xE740;'}"/>
                        <TextBlock Text="{Binding IsCompactView, Converter={StaticResource StringFormatConverter}, ConverterParameter={StaticResource ViewModeFormat}}"/>
                    </StackPanel>
                </Button>

                <Button Style="{StaticResource DefaultButtonStyle}">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE8C9;"/>
                        <TextBlock Text="Export"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </StackPanel>

        <!-- Single TabView for both tabs and content -->
        <controls:TabView Grid.Row="1" Margin="0,24,0,0" IsAddTabButtonVisible="False">
            <controls:TabView.TabStripHeader>
                <TextBlock Text="Meetings" Style="{StaticResource TitleTextBlockStyle}" Margin="0,0,12,0"/>
            </controls:TabView.TabStripHeader>

            <!-- General Tab -->
            <controls:TabViewItem Header="General">
                <controls:TabViewItem.IconSource>
                    <SymbolIconSource Symbol="Globe"/>
                </controls:TabViewItem.IconSource>

                <ScrollViewer>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Today's meetings -->
                        <StackPanel Grid.Row="0" Spacing="12">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon Glyph="&#xE121;" FontSize="20" Foreground="{ThemeResource TextFillColorPrimary}"/>
                                <TextBlock
                                    Text="Today's Meetings"
                                    Style="{StaticResource TitleTextBlockStyle}"
                                    Foreground="{ThemeResource TextFillColorPrimary}"/>
                                <Border
                                    Background="{ThemeResource SystemFillColorCriticalBrush}"
                                    CornerRadius="8"
                                    Padding="6,2"
                                    VerticalAlignment="Center">
                                    <TextBlock
                                        Text="{Binding MeetingCountText}"


                                        Style="{StaticResource CaptionTextBlockStyle}"
                                        Foreground="White"/>
                                </Border>
                            </StackPanel>

                            <ItemsControl
                                ItemsSource="{Binding TodayMeetings}"
                                ItemTemplate="{Binding IsCompactView, Converter={StaticResource StringFormatConverter}, ConverterParameter='CompactMeetingItemTemplate:MeetingItemTemplate'}"/>
                        </StackPanel>

                        <!-- Separator -->
                        <Border
                            Grid.Row="1"
                            Height="1"
                            Background="{ThemeResource CardStrokeColorDefault}"
                            Margin="0,24"/>

                        <!-- Upcoming meetings -->
                        <StackPanel Grid.Row="2" Spacing="12" Margin="0,24,0,0">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon Glyph="&#xE81C;" FontSize="20" Foreground="{ThemeResource TextFillColorPrimary}"/>
                                <TextBlock
                                    Text="Upcoming Meetings"
                                    Style="{StaticResource TitleTextBlockStyle}"
                                    Foreground="{ThemeResource TextFillColorPrimary}"/>
                            </StackPanel>

                            <ItemsControl
                                ItemsSource="{Binding UpcomingMeetings}"
                                ItemTemplate="{Binding IsCompactView, Converter={StaticResource StringFormatConverter}, ConverterParameter='CompactMeetingItemTemplate:MeetingItemTemplate'}"/>
                        </StackPanel>
                    </Grid>
                </ScrollViewer>
            </controls:TabViewItem>

            <!-- Meeting Management Tab -->
            <controls:TabViewItem Header="Management">
                <controls:TabViewItem.IconSource>
                    <SymbolIconSource Symbol="Setting"/>
                </controls:TabViewItem.IconSource>

                <ScrollViewer>
                    <Grid Margin="0,20,0,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Integration Platforms -->
                        <StackPanel Grid.Row="0" Spacing="16">
                            <TextBlock
                                Text="Connect to Meeting Platforms"
                                Style="{StaticResource TitleTextBlockStyle}"
                                Foreground="{ThemeResource TextFillColorPrimary}"/>
                            <TextBlock
                                Text="Select a platform to integrate with your meetings"
                                Style="{StaticResource BodyTextBlockStyle}"
                                Foreground="{ThemeResource TextFillColorSecondary}"/>

                            <!-- Platform grid -->
                            <Grid Margin="0,16,0,0">
                                <Grid.Resources>
                                    <local:PlatformItem x:Key="GoogleMeet" 
                                                        Name="Google Meet" 
                                                        Icon="&#xE774;" 
                                                        Color="#34A853"/>
                                    <local:PlatformItem x:Key="MicrosoftTeams" 
                                                        Name="Microsoft Teams" 
                                                        Icon="&#xEBD2;" 
                                                        Color="#6264A7"/>
                                    <local:PlatformItem x:Key="Zoom" 
                                                        Name="Zoom" 
                                                        Icon="&#xE717;" 
                                                        Color="#2D8CFF"/>
                                    <local:PlatformItem x:Key="Webex" 
                                                        Name="Webex" 
                                                        Icon="&#xE909;" 
                                                        Color="#FA4700"/>
                                    <local:PlatformItem x:Key="Skype" 
                                                        Name="Skype" 
                                                        Icon="&#xEB3F;" 
                                                        Color="#00AFF0"/>
                                    <local:PlatformItem x:Key="Custom" 
                                                        Name="Custom" 
                                                        Icon="&#xE710;" 
                                                        Color="#6B5B95"/>
                                </Grid.Resources>

                                <ItemsControl ItemsSource="{Binding Platforms}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <VariableSizedWrapGrid 
                MaximumRowsOrColumns="3" 
                Orientation="Horizontal"
                HorizontalAlignment="Left"
                ItemHeight="140"
                ItemWidth="140"/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>

                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <!-- Use your PlatformButtonTemplate style -->
                                            <Button Style="{StaticResource PlatformButtonTemplate}"
                    Content="{Binding}" />
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>


                            </Grid>
                        </StackPanel>

                        <!-- Separator -->
                        <Border
                            Grid.Row="1"
                            Height="1"
                            Background="{ThemeResource CardStrokeColorDefault}"
                            Margin="0,40"/>

                        <!-- Quick Actions -->
                        <StackPanel Grid.Row="2" Spacing="16" Margin="0,40,0,0">
                            <TextBlock
                                Text="Quick Actions"
                                Style="{StaticResource TitleTextBlockStyle}"
                                Foreground="{ThemeResource TextFillColorPrimary}"/>

                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Generate Meeting Link -->
                                <Button
                                    Grid.Row="0" Grid.Column="0"
                                    Style="{StaticResource DefaultButtonStyle}"
                                    Height="120"
                                    Margin="0,0,8,8">
                                    <StackPanel Spacing="12" HorizontalAlignment="Center">
                                        <FontIcon Glyph="&#xE71B;" FontSize="32"/>
                                        <TextBlock
                                            Text="Generate Link"
                                            Style="{StaticResource BodyStrongTextBlockStyle}"
                                            TextAlignment="Center"/>
                                        <TextBlock
                                            Text="Create instant meeting link"
                                            Style="{StaticResource CaptionTextBlockStyle}"
                                            TextAlignment="Center"
                                            Foreground="{ThemeResource TextFillColorSecondary}"/>
                                    </StackPanel>
                                </Button>

                                <!-- Schedule Recurring -->
                                <Button
                                    Grid.Row="0" Grid.Column="1"
                                    Style="{StaticResource DefaultButtonStyle}"
                                    Height="120"
                                    Margin="4,0,4,8">
                                    <StackPanel Spacing="12" HorizontalAlignment="Center">
                                        <FontIcon Glyph="&#xE121;" FontSize="32"/>
                                        <TextBlock
                                            Text="Recurring"
                                            Style="{StaticResource BodyStrongTextBlockStyle}"
                                            TextAlignment="Center"/>
                                        <TextBlock
                                            Text="Set up repeating meetings"
                                            Style="{StaticResource CaptionTextBlockStyle}"
                                            TextAlignment="Center"
                                            Foreground="{ThemeResource TextFillColorSecondary}"/>
                                    </StackPanel>
                                </Button>

                                <!-- Import/Export -->
                                <Button
                                    Grid.Row="0" Grid.Column="2"
                                    Style="{StaticResource DefaultButtonStyle}"
                                    Height="120"
                                    Margin="8,0,0,8">
                                    <StackPanel Spacing="12" HorizontalAlignment="Center">
                                        <FontIcon Glyph="&#xE8C9;" FontSize="32"/>
                                        <TextBlock
                                            Text="Import/Export"
                                            Style="{StaticResource BodyStrongTextBlockStyle}"
                                            TextAlignment="Center"/>
                                        <TextBlock
                                            Text="Transfer meeting data"
                                            Style="{StaticResource CaptionTextBlockStyle}"
                                            TextAlignment="Center"
                                            Foreground="{ThemeResource TextFillColorSecondary}"/>
                                    </StackPanel>
                                </Button>

                                <!-- Meeting Analytics -->
                                <Button
                                    Grid.Row="1" Grid.Column="0"
                                    Style="{StaticResource DefaultButtonStyle}"
                                    Height="120"
                                    Margin="0,8,8,0">
                                    <StackPanel Spacing="12" HorizontalAlignment="Center">
                                        <FontIcon Glyph="&#xE9D2;" FontSize="32"/>
                                        <TextBlock
                                            Text="Analytics"
                                            Style="{StaticResource BodyStrongTextBlockStyle}"
                                            TextAlignment="Center"/>
                                        <TextBlock
                                            Text="View meeting statistics"
                                            Style="{StaticResource CaptionTextBlockStyle}"
                                            TextAlignment="Center"
                                            Foreground="{ThemeResource TextFillColorSecondary}"/>
                                    </StackPanel>
                                </Button>

                                <!-- Templates -->
                                <Button
                                    Grid.Row="1" Grid.Column="1"
                                    Style="{StaticResource DefaultButtonStyle}"
                                    Height="120"
                                    Margin="4,8,4,0">
                                    <StackPanel Spacing="12" HorizontalAlignment="Center">
                                        <FontIcon Glyph="&#xE8A1;" FontSize="32"/>
                                        <TextBlock
                                            Text="Templates"
                                            Style="{StaticResource BodyStrongTextBlockStyle}"
                                            TextAlignment="Center"/>
                                        <TextBlock
                                            Text="Use meeting templates"
                                            Style="{StaticResource CaptionTextBlockStyle}"
                                            TextAlignment="Center"
                                            Foreground="{ThemeResource TextFillColorSecondary}"/>
                                    </StackPanel>
                                </Button>

                                <!-- Settings -->
                                <Button
                                    Grid.Row="1" Grid.Column="2"
                                    Style="{StaticResource DefaultButtonStyle}"
                                    Height="120"
                                    Margin="8,8,0,0">
                                    <StackPanel Spacing="12" HorizontalAlignment="Center">
                                        <FontIcon Glyph="&#xE713;" FontSize="32"/>
                                        <TextBlock
                                            Text="Settings"
                                            Style="{StaticResource BodyStrongTextBlockStyle}"
                                            TextAlignment="Center"/>
                                        <TextBlock
                                            Text="Configure meeting options"
                                            Style="{StaticResource CaptionTextBlockStyle}"
                                            TextAlignment="Center"
                                            Foreground="{ThemeResource TextFillColorSecondary}"/>
                                    </StackPanel>
                                </Button>
                            </Grid>

                            <!-- Not implemented message -->
                            <InfoBar
                                Title="Feature Not Implemented"
                                Message="This feature will be available in the next update. Stay tuned!"
                                Severity="Informational"
                                IsOpen="True"
                                Margin="0,20,0,0"/>
                        </StackPanel>
                    </Grid>
                </ScrollViewer>
            </controls:TabViewItem>
        </controls:TabView>
    </Grid>
</Page>