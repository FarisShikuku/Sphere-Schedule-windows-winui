<UserControl
    x:Class="Sphere_Schedule_App.Views.Controls.ModernNavigationView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Microsoft.UI.Xaml.Controls">

    <Grid>
        <NavigationView x:Name="MainNavigation"
                        IsPaneOpen="True"
                        IsBackButtonVisible="Collapsed"
                        IsSettingsVisible="False"
                        PaneDisplayMode="Left"
                        OpenPaneLength="280"
                        CompactPaneLength="60">

            <!-- Navigation Pane Header -->
            <NavigationView.PaneHeader>
                <StackPanel Spacing="12" Padding="16,24,16,16">
                    <Ellipse Width="64" Height="64">
                        <Ellipse.Fill>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="{StaticResource PrimaryBlueColor}" Offset="0"/>
                                <GradientStop Color="{StaticResource PrimaryGreenColor}" Offset="1"/>
                            </LinearGradientBrush>
                        </Ellipse.Fill>
                    </Ellipse>
                    <StackPanel>
                        <TextBlock Text="Welcome, User"
                                   Foreground="White"
                                   FontSize="16"
                                   FontWeight="SemiBold"/>
                        <TextBlock Text="user@example.com"
                                   Foreground="{StaticResource TextSecondary}"
                                   FontSize="12"/>
                    </StackPanel>
                </StackPanel>
            </NavigationView.PaneHeader>

            <!-- Navigation Menu Items -->
            <NavigationView.MenuItems>
                <NavigationViewItem Content="Dashboard" Tag="Dashboard">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xE80F;"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>

                <NavigationViewItem Content="Tasks" Tag="Tasks">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xE130;"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>

                <NavigationViewItem Content="Appointments" Tag="Appointments">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xE787;"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>

                <NavigationViewItem Content="Meetings" Tag="Meetings">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xE716;"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>

                <NavigationViewItem Content="Reports" Tag="Reports">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xE9D2;"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>

                <NavigationViewItemSeparator/>

                <NavigationViewItem Content="Settings" Tag="Settings">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xE713;"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>

                <NavigationViewItem Content="Help &amp; Support" Tag="Help">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xE897;"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
            </NavigationView.MenuItems>

            <!-- Main Content Area -->
            <Frame x:Name="ContentFrame"/>
        </NavigationView>
    </Grid>
</UserControl>